<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_toolbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_dimension_8"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/common_dimension_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/common_dimension_50"
                    android:orientation="horizontal">

                    <TextView
                        android:text="入塘批次"
                        android:textColor="@color/black"
                        android:textSize="@dimen/mediumTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/batchNumber"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请选择"
                        android:textSize="@dimen/BasicTextSize"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="@dimen/common_dimension_5"
                        android:src="@mipmap/shape_arrow_bigger"
                        android:layout_width="@dimen/common_dimension_16"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:background="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimension_0.5"
                    />

                <View
                    android:background="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimension_0.5"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/common_dimension_50"
                    android:orientation="horizontal">

                    <TextView
                        android:text="塘口"
                        android:textColor="@color/black"
                        android:textSize="@dimen/mediumTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/ponds"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请选择"
                        android:textSize="@dimen/BasicTextSize"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="@dimen/common_dimension_5"
                        android:src="@mipmap/shape_arrow_bigger"
                        android:layout_width="@dimen/common_dimension_16"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <View
                    android:background="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimension_0.5"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/common_dimension_50"
                    android:orientation="horizontal">

                    <TextView
                        android:text="投入品"
                        android:textColor="@color/black"
                        android:textSize="@dimen/mediumTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reagent"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请选择"
                        android:textSize="@dimen/BasicTextSize"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="@dimen/common_dimension_5"
                        android:src="@mipmap/shape_arrow_bigger"
                        android:layout_width="@dimen/common_dimension_16"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:background="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimension_0.5"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/common_dimension_50">
                    <TextView
                        android:text="投入量"
                        android:textColor="@color/black"
                        android:textSize="@dimen/mediumTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:textSize="@dimen/BasicTextSize"
                        android:inputType="numberDecimal"
                        android:id="@+id/amount"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="填写投入量"
                        android:textCursorDrawable="@drawable/style_cursor_black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/unit"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="选择单位"
                        android:textSize="@dimen/BasicTextSize"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="@dimen/common_dimension_5"
                        android:src="@mipmap/shape_arrow_bigger"
                        android:layout_width="@dimen/common_dimension_16"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimension_0.5"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/common_dimension_50">
                    <TextView
                        android:text="投入时间"
                        android:textColor="@color/black"
                        android:textSize="@dimen/mediumTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/selectedTime"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请选择"
                        android:textSize="@dimen/BasicTextSize"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="@dimen/common_dimension_5"
                        android:src="@mipmap/shape_arrow_bigger"
                        android:layout_width="@dimen/common_dimension_16"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:background="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimension_0.5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/remarks"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:textSize="@dimen/BasicTextSize"
                        android:textColor="@color/black"
                        android:hint="备注（选填）"
                        android:gravity="start"
                        android:maxLines="3"
                        android:background="@drawable/rounded_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="100dp" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>