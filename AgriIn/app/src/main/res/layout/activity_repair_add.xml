<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.repair.RepairAddActivity">
    <include
        layout="@layout/include_toolbar"/>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:clickable="true"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <com.allen.library.SuperTextView
                android:layout_marginTop="15dp"
                app:sRightIconRes="@drawable/shape_arrow"
                android:id="@+id/stvRobotChoose"
                app:sLeftTextString="机器人"
                app:sRightTextString="点击选择巡航机器人"
                android:layout_width="match_parent"
                android:layout_height="45dp">
            </com.allen.library.SuperTextView>
            <EditText
                android:id="@+id/etDescription"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:textSize="@dimen/SmallTextSize"
                android:textColor="@color/black"
                android:hint="请描述设备具体状况"
                android:gravity="left|top"
                android:maxLines="3"
                android:background="@drawable/shape_add_head_pic"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>