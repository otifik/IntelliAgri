<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:clickable="true"
    app:cardCornerRadius="3dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="1dp">
    <LinearLayout
        android:id="@+id/layout_wrapper"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/ivBackground"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:src="@mipmap/bg_topic_1"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                />
            <TextView
                android:id="@+id/tvPondName"
                android:text="#对应的哪一个生产单元#"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/LargeTextSize"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@mipmap/ic_config_num"
                android:layout_width="38dp"
                android:layout_height="38dp" />
            <TextView
                android:id="@+id/tvConfigRobotNumber"
                android:textColor="@color/pond_text_color"
                android:textSize="@dimen/mediumTextSize"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="设备编号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@mipmap/ic_robot_cg"
                android:layout_width="38dp"
                android:layout_height="38dp" />
            <TextView
                android:id="@+id/tvConfigType"
                android:textColor="@color/pond_text_color"
                android:textSize="@dimen/mediumTextSize"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="12dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@mipmap/ic_config_circle"
                android:layout_width="38dp"
                android:layout_height="38dp" />
            <TextView
                android:id="@+id/tvConfigCircle"
                android:textColor="@color/pond_text_color"
                android:textSize="@dimen/mediumTextSize"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@mipmap/ic_config_speed"
                android:layout_width="38dp"
                android:layout_height="38dp" />
            <TextView
                android:id="@+id/tvConfigSpeed"
                android:textColor="@color/pond_text_color"
                android:textSize="@dimen/mediumTextSize"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>