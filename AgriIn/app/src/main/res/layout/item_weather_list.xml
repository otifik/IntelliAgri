<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dimension_50"
        android:layout_marginTop="@dimen/common_dimension_5"
        android:background="@drawable/bg_card">

        <TextView
            android:id="@+id/tvWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_dimension_10"
            android:text="多云转阴"
            android:textSize="@dimen/text_size_17" />

        <ImageView
            android:id="@+id/ivMakeTrue"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_dimension_10"
            android:src="@mipmap/ic_make_true"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>