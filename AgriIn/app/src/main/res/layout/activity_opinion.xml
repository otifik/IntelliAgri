<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.repair.RepairAddActivity">
    <include
        layout="@layout/include_toolbar"/>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:clickable="true"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.allen.library.SuperTextView
                android:layout_marginTop="8dp"
                app:sLeftTextString="问题和意见"
                android:layout_width="match_parent"
                android:layout_height="45dp">
            </com.allen.library.SuperTextView>
            <EditText
                android:id="@+id/etDescription"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:textSize="@dimen/SmallTextSize"
                android:textColor="@color/black"
                android:hint="简要描述你要反馈的问题和意见"
                android:gravity="left|top"
                android:maxLines="3"
                android:background="@drawable/shape_add_head_pic"
                android:layout_width="match_parent"
                android:layout_height="100dp" />


            <ImageView
                android:id="@+id/ivImg"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ico_opinionadd"/>


            <com.allen.library.SuperTextView
                android:layout_marginTop="15dp"
                app:sLeftTextString="联系方式"
                android:layout_width="match_parent"
                android:layout_height="45dp">
            </com.allen.library.SuperTextView>

            <EditText
                android:id="@+id/etContact"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:padding="5dp"
                android:textSize="@dimen/SmallTextSize"
                android:textColor="@color/black"
                android:hint="微信/QQ/邮箱"
                android:background="@null"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>




    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="提交"
        android:background="@drawable/selector_btn_login_submit"
        android:gravity="center"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>