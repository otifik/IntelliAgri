<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_portrait"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/tab_my_normal"
            />
        <TextView
            android:layout_toRightOf="@id/iv_portrait"
            android:id="@+id/tv_mainuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="用户名称"
            android:maxEms="8"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="11sp"
            android:textColor="#1E90FF"/>
        <TextView
            android:layout_toRightOf="@id/iv_portrait"
            android:layout_below="@id/tv_mainuser"
            android:id="@+id/tv_maintime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:text="00-00 00:00"
            android:textSize="11sp"
            android:textColor="#404040"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_usertype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:textSize="11sp"
                android:textColor="#58E2B8"
                android:background="@drawable/qalist_bg_green"/>


        </LinearLayout>
    </RelativeLayout>



    <ImageView
        android:id="@+id/ivQuestion"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="40dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题描述:"
            android:textSize="13sp"
            android:textColor="#1E90FF"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="5dp"
            android:lineSpacingExtra="3dp"
            android:padding="4dp"
            android:text="我是content"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>








    <LinearLayout
        android:id="@+id/ll_subcomment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_user1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="子用户1:"
            android:textSize="10sp"
            android:textColor="#1E90FF"/>
        <TextView
            android:id="@+id/tv_sub1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:lineSpacingExtra="3dp"
            android:text="盛开的撒娇的萨达是看见爱的卡萨几点睡了空间的来的快速拉动卡死了卡掉了；收看电视啦"
            android:textSize="12sp"
            android:textColor="#404040"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_subcomment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_user2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="子用户2:"
            android:textSize="10sp"
            android:textColor="#1E90FF"/>
        <TextView
            android:id="@+id/tv_sub2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:lineSpacingExtra="3dp"
            android:text="盛开的撒娇的萨达是看见爱的卡萨几点睡了空间的来的快速拉动卡死了卡掉了；收看电视啦"
            android:textSize="12sp"
            android:textColor="#404040"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_subcomment3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_user3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="子用户3:"
            android:textSize="10sp"
            android:textColor="#1E90FF"/>
        <TextView
            android:id="@+id/tv_sub3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:lineSpacingExtra="3dp"
            android:text="盛开的撒娇的萨达是看见爱的卡萨几点睡了空间的来的快速拉动卡死了卡掉了；收看电视啦"
            android:textSize="12sp"
            android:textColor="#404040"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_checkall"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看全部n条回答"
        android:textSize="13sp"
        android:textColor="#CD853F"
        />





    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#DCDCDC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_qaanswer"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_qafilter"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="3dp"
                android:layout_centerVertical="true"
                android:src="@drawable/qa_comment_icon"/>
            <TextView
                android:layout_toRightOf="@id/iv_qafilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回答"
                android:textSize="14sp"
                android:padding="3dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="15dip"
            android:layout_weight="0.01"
            android:layout_gravity="center_vertical"
            android:background="#DCDCDC"/>

        <RelativeLayout
            android:id="@+id/rl_qacollect"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_qaask"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="3dp"
                android:layout_centerVertical="true"
                android:src="@drawable/qa_fav_icon"/>
            <TextView
                android:layout_toRightOf="@id/iv_qaask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textSize="14sp"
                android:padding="3dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="15dip"
            android:layout_weight="0.01"
            android:layout_gravity="center_vertical"
            android:background="#DCDCDC"/>

        <RelativeLayout
            android:id="@+id/rl_qashare"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_qanote"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="3dp"
                android:layout_centerVertical="true"
                android:src="@drawable/qa_share_icon"/>
            <TextView
                android:layout_toRightOf="@id/iv_qanote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textSize="14sp"
                android:padding="3dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="14dip"
        android:background="#DCDCDC"
        android:alpha="0.8"/>









</LinearLayout>