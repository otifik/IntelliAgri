<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.repair.RepairAddActivity">
    <include
        layout="@layout/include_toolbar"/>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:clickable="true"
    app:cardCornerRadius="3dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="1dp">
    <LinearLayout
        android:layout_margin="20dp"
        android:id="@+id/layout_wrapper"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ico_opinion" />
            <TextView
                android:id="@+id/tvMuban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="终端"
                android:textColor="@color/colorContent"
                android:textSize="@dimen/mediumTextSize" />
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/common_dimension_5"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimension_0.5"
            />


        <LinearLayout
            android:id="@+id/ll_pond"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/common_dimension_50">
            <TextView
                android:text="终端序列号"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:textCursorDrawable="@drawable/style_cursor_black"
                android:textSize="@dimen/SmallTextSize"
                android:id="@+id/etDeviui"
                android:background="@null"
                android:gravity="right"
                android:hint="终端序列号"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="invisible"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="@dimen/common_dimension_5"
                android:src="@mipmap/shape_arrow_bigger"
                android:layout_width="@dimen/common_dimension_16"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimension_0.5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/common_dimension_50">
            <TextView
                android:text="备注名称"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:textCursorDrawable="@drawable/style_cursor_black"
                android:textSize="@dimen/SmallTextSize"
                android:id="@+id/etName"
                android:background="@null"
                android:gravity="right"
                android:hint="备注名称"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="invisible"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="@dimen/common_dimension_5"
                android:src="@mipmap/shape_arrow_bigger"
                android:layout_width="@dimen/common_dimension_16"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimension_0.5"
            />




        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/common_dimension_50">
            <TextView
                android:text="终端类型"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvType"
                android:background="@null"
                android:gravity="right"
                android:hint="终端类型"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_marginLeft="@dimen/common_dimension_5"
                android:src="@mipmap/shape_arrow_bigger"
                android:layout_width="@dimen/common_dimension_16"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/common_dimension_50">
            <TextView
                android:layout_marginLeft="40dp"
                android:text="类型名称"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/tvTypeName"
                android:background="@null"
                android:gravity="right"
                android:hint="类型名称"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/common_dimension_50">
            <TextView
                android:layout_marginLeft="40dp"
                android:text="厂商"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/tvManu"
                android:background="@null"
                android:gravity="right"
                android:hint="厂商"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimension_0.5"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/common_dimension_50">
            <TextView
                android:text="产品"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/SmallTextSize"
                android:id="@+id/tvProduct"
                android:background="@null"
                android:gravity="right"
                android:hint="产品"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_marginLeft="@dimen/common_dimension_5"
                android:src="@mipmap/shape_arrow_bigger"
                android:layout_width="@dimen/common_dimension_16"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimension_0.5"
            />


        <LinearLayout
            android:id="@+id/ll_inputWeather"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/common_dimension_50">
            <TextView
                android:text="所属用户"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/SmallTextSize"
                android:id="@+id/tvUserName"
                android:background="@null"
                android:gravity="right"
                android:hint="所属用户"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_marginLeft="@dimen/common_dimension_5"
                android:src="@mipmap/shape_arrow_bigger"
                android:layout_width="@dimen/common_dimension_16"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimension_0.5"
            />





    </LinearLayout>
</android.support.v7.widget.CardView>


</LinearLayout>