<?xml version="1.0" encoding="utf-8"?>
<!-- 文件位置 -->
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_dimension_45">
    <RelativeLayout
        android:id="@+id/rlDel"
        android:visibility="visible"
        android:layout_width="@dimen/common_dimension_30"
        android:layout_height="match_parent">
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_centerInParent="true"
            android:theme="@style/MyCheckBoxGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent">
        <TextView
            android:drawableLeft="@mipmap/ic_log_down"
            android:drawablePadding="@dimen/common_dimension_5"
            android:layout_marginLeft="@dimen/common_dimension_5"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/SmallTextSize"
            android:id="@+id/tvFileName"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvFileTime"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:textColor="@color/black"
        android:textSize="@dimen/SmallTextSize"
        android:layout_height="match_parent" />

</LinearLayout>